            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "price": { "type": "number" },
              "credits": { "type": "integer" },
              "subscriber": { "type": "boolean" },
              "marketplace": { "type": "boolean" },
              "day1": { "type": "boolean" },
              "day2": { "type": "boolean" },
              "remainingDay1": { "type": ["integer", "null"] },
