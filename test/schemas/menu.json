{
  "definitions": {},
  "$id": "/menu.json",
  "type": "object",
  "required": ["menu", "user", "order", "bundles"],
  "properties": {
    "menu": {
      "type": "object",
      "title": "menu",
      "required": [
        "id",
        "name",
        "menuNote",
        "subscriberNote",
        "isCurrent",
        "orderingDeadlineText",
        "enablePayWhatYouCan",
        "pickupDays",
        "items"
      ],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "menuNote": { "type": ["null", "string"] },
        "subscriberNote": { "type": "string" },
        "isCurrent": { "type": "boolean" },
        "orderingDeadlineText": { "type": "string" },
        "enablePayWhatYouCan": { "type": "boolean" },
        "pickupDays": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "pickupAt", "orderDeadlineAt"],
            "properties": {
              "id": { "type": "integer" },
              "pickupAt": { "type": "string" },
              "orderDeadlineAt": { "type": "string" },
              "debug": { "type": "string" }
            }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "description",
              "price",
              "credits",
              "subscriber",
              "marketplace",
              "pickupDays"
            ],
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "price": { "type": "number" },
              "credits": { "type": "integer" },
              "image": {
                "type": ["null", "string"],
                "title": "image",
                "examples": [
                  "/rails/active_storage/blobs/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaHBCZz09IiwiZXhwIjpudWxsLCJwdXIiOiJibG9iX2lkIn19--f5152334760abf53540d2df5ba6caa61b3d4635a/RussellBread2-002.webp"
                ]
              },
              "subscriber": { "type": "boolean" },
              "marketplace": { "type": "boolean" },
              "pickupDays": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "id",
                    "pickupAt",
                    "orderDeadlineAt",
                    "remaining"
                  ],
                  "properties": {
                    "id": { "type": "integer" },
                    "pickupAt": { "type": "string" },
                    "orderDeadlineAt": { "type": "string" },
                    "debug": { "type": "string" },
                    "remaining": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "user": {
      "type": ["object", "null"],
      "title": "user",
      "required": [
        "id",
        "email",
        "name",
        "hashid",
        "credits",
        "breadsPerWeek",
        "subscriber"
      ],
      "properties": {
        "id": { "type": "integer" },
        "email": { "type": "string" },
        "name": { "type": "string" },
        "hashid": {
          "type": "string",
          "examples": ["Dot9gKn9w"]
        },
        "credits": { "type": "integer" },
        "breadsPerWeek": {
          "type": "number",
          "default": 1.0
        },
        "subscriber": { "type": "boolean" }
      }
    },
    "order": {
      "type": ["object", "null"],
      "title": "order",
      "required": ["items", "id", "comments", "skip"],
      "properties": {
        "items": {
          "type": "array",
          "title": "items",
          "items": {
            "type": "object",
            "title": "item",
            "required": [
              "itemId",
              "quantity",
              "day",
              "pickupDayId",
              "pickupAt"
            ],
            "properties": {
              "itemId": { "type": "integer" },
              "quantity": { "type": "integer" },
              "day": { "type": "string" },
              "pickupDayId": { "type": "integer" },
              "pickupAt": { "type": "string" }
            }
          }
        },
        "id": { "type": "integer" },
        "comments": { "type": "string" },
        "skip": { "type": "boolean" },
        "stripeReceiptUrl": { "type": ["string", "null"] },
        "stripeChargeAmount": { "type": ["number", "null"] }
      }
    },
    "bundles": {
      "type": "array",
      "title": "bundles",
      "items": {
        "type": "object",
        "title": "bundle",
        "required": [
          "name",
          "description",
          "credits",
          "price",
          "breadsPerWeek"
        ],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": ["string", "null"] },
          "price": { "type": "number" },
          "credits": { "type": "integer" },
          "breadsPerWeek": {
            "type": "number",
            "default": 1.0
          }
        }
      }
    }
  }
}
